<Window x:Class="RepositoryPattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepositoryPattern"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        
    </Window.Resources>
    <DockPanel LastChildFill="True">
        
        <!-- Les boutons -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom"  HorizontalAlignment="Right">
            <Button Margin="5" Padding="5" Click="Button_Click">Fermer</Button>
            <Button Margin="5" Padding="5" Click="Button_Click_2" IsEnabled="{Binding CanDelete}">Supprimer</Button>
            <Button Margin="5" Padding="5" Click="Button_Click_1">Charger les données</Button>
        </StackPanel>
        
        
        <DataGrid ItemsSource="{Binding Persons}" SelectionChanged="Selector_OnSelectionChanged"></DataGrid>
    </DockPanel>
</Window>
